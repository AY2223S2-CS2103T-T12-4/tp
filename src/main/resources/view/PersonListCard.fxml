<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
   <HBox fillHeight="false">
      <children>
       <VBox alignment="CENTER_LEFT" minHeight="80.0" spacing="3.0">
         <padding>
           <Insets bottom="5" left="15" right="5" top="5" />
         </padding>
         <HBox alignment="CENTER_LEFT" spacing="5">
           <Label fx:id="id" styleClass="cell_big_label">
             <minWidth>
               <!-- Ensures that the label text is never truncated -->
               <Region fx:constant="USE_PREF_SIZE" />
             </minWidth>
                  <font>
                     <Font size="16.0" />
                  </font>
           </Label>
           <Label fx:id="name" styleClass="cell_big_label" text="\$first">
                  <font>
                     <Font size="16.0" />
                  </font>
               </Label>
         </HBox>
            <HBox>
               <children>
                  <Label styleClass="cell_small_label" text="GitHub: " />
               <Label fx:id="profile" styleClass="cell_small_label" text="\$GitHub">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
               </children>
               <VBox.margin>
                  <Insets left="15.0" />
               </VBox.margin>
            </HBox>
       </VBox>
      </children>
   </HBox>
  <GridPane alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
    </columnConstraints>
      <rowConstraints>
         <RowConstraints />
      </rowConstraints>
      <children>
      <FlowPane fx:id="tags" alignment="CENTER_LEFT">
            <padding>
               <Insets top="-20.0" />
            </padding>
         </FlowPane>
      </children>
      <HBox.margin>
         <Insets left="10.0" />
      </HBox.margin>
  </GridPane>
</HBox>
