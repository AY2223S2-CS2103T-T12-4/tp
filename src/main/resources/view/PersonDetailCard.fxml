<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="detailPane" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <GridPane HBox.hgrow="ALWAYS">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
            </columnConstraints>
            <children>
                <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
                    <padding>
                        <Insets bottom="5" left="15" right="5" top="5" />
                    </padding>
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="5">
                            <children>
                                <Label styleClass="cell_big_label" text="Name: ">
                                    <minWidth>
                                        <Region fx:constant="USE_PREF_SIZE" />
                                    </minWidth>
                                </Label>
                                <Label fx:id="name" styleClass="cell_big_label" text="\$first" />
                            </children>
                        </HBox>
                        <FlowPane fx:id="languages" />
                        <FlowPane fx:id="tags" />
                        <HBox alignment="CENTER_LEFT" spacing="5">
                            <children>
                                <Label styleClass="cell_big_label" text="GitHub: ">
                                    <minWidth>
                                        <Region fx:constant="USE_PREF_SIZE" />
                                    </minWidth>
                                </Label>
                                <Label fx:id="profile" styleClass="cell_small_label" text="\$GitHub" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="5">
                            <children>
                                <Label minWidth="-Infinity" styleClass="cell_big_label" text="Phone:" />
                                <Label fx:id="phone" styleClass="cell_small_label" text="\$phone" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="5">
                            <children>
                                <Label styleClass="cell_big_label" text="Address:">
                                    <minWidth>
                                        <Region fx:constant="USE_PREF_SIZE" />
                                    </minWidth>
                                </Label>
                                <Label fx:id="address" styleClass="cell_small_label" text="\$address" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="5">
                            <children>
                                <Label styleClass="cell_big_label" text="Email:">
                                    <minWidth>
                                        <Region fx:constant="USE_PREF_SIZE" />
                                    </minWidth>
                                </Label>
                                <Label fx:id="email" styleClass="cell_small_label" text="\$email" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
            <rowConstraints>
                <RowConstraints />
            </rowConstraints>
        </GridPane>
    </children>
</HBox>
